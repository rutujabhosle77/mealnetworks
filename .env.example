# Database Connection (Pooled - Recommended for most uses)
DATABASE_URL=postgresql://user:password@host-pooler.region.aws.neon.tech/database?sslmode=require

# Database Connection (Direct - For migrations requiring direct connection)
DATABASE_URL_UNPOOLED=postgresql://user:password@host.region.aws.neon.tech/database?sslmode=require

# JWT Secret (CHANGE THIS IN PRODUCTION!)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# SMTP Email Configuration (Optional - for email notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-app-email@gmail.com
# SMTP_PASS=your-app-password-or-app-specific-password

# Node Environment
NODE_ENV=development
